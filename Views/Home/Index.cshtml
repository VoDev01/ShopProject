@model List<Car>
@{
    ViewData["Title"] = "Главная страница";
}
<style type="text/css">
    a.to-catalogue {
        width: 1250px;
        height: 860px;
    }

    img.carousel-img {
        width: 100%;
        height: 100%;
    }
</style>
<div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="0" class="active"></button>
        @for(int i = 1;i < Model.Count;i++)
        {
            <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="@i"></button>
        }
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <div class="container">
                <a class="to-catalogue d-block" asp-controller="Cars" asp-action="ListCars"><img class="carousel-img" src="@Model[0].Image" alt="@Model[0].Name" /></a>
            </div>
        </div>
        @for(int i = 1;i < Model.Count;i++)
        {
            <div class="carousel-item">
                <div class="container">
                    <a class="to-catalogue d-block" asp-controller="Cars" asp-action="ListCars"><img class="carousel-img" src="@Model[i].Image" alt="@Model[i].Name" /></a>
                </div>
            </div>
        }
    </div>
</div>