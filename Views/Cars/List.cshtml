@model List<Car> 
@{
    ViewData["Title"] = "Каталог";
}
<style type="text/css">
    #purchase_button{
        color: #fff;
        border-color: #fff;
        background-color: #292;
    }
    #purchase_button:hover{
        color: #000;
        border-color: #000;
        background-color: #e11;
    }
</style>
<h1>Каталог машин</h1>

<div class="row mt-5 mb-2">
    @foreach(var car in Model)
    {
        <div class="col-md-4 mb-3">
            <h2>@car.Name</h2>
            <img src="@car.Image" alt="@car.Name" width="400" height="300">
            <p>@car.Description</p>
            <p id="car_price">Цена: @car.Price&#8381;</p>
            <a class="btn" id="purchase_button" asp-controller="Order" asp-action="AddPersonInfoToOrder" asp-route-carId="@car.Id">Приобрести</a>
        </div>
    }
</div>