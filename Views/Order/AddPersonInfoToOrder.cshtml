@model ShopProject.ViewModels.PeopleViewModel
@{
    ViewData["Title"] = "Оформление заказа";
}
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

<h1>Оформление заказа</h1>
<form asp-antiforgery="true" asp-controller="Order" asp-action="AddPersonInfoToOrder" method="post">
    <div class="border p-3 mt-4">
        <div class="row">
            <h2 class="text-primary">Персональная информация</h2>
        </div>
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div class="mb-3">
            <label asp-for="@Model.People.Name">Имя</label>
            <input class="field form-control" asp-for="@Model.People.Name" />
            <span asp-validation-for="@Model.People.Name" class="text-danger"></span>
            <br>
            <label asp-for="@Model.People.Surname">Фамилия</label>
            <input class="field form-control" asp-for="@Model.People.Surname" />
            <span asp-validation-for="@Model.People.Surname" class="text-danger"></span>
            <br>
            <label asp-for="@Model.People.Email">Email</label>
            <input class="field form-control" asp-for="@Model.People.Email" />
            <span asp-validation-for="@Model.People.Email" class="text-danger"></span>
            <br>
            <label asp-for="@Model.People.PhoneNum">Номер телефона</label>
            <input class="field form-control" asp-for="@Model.People.PhoneNum" />
            <input asp-for="@Model.CarId" type="hidden" />
        </div>
        <button type="submit" class="btn btn-success" style="width: 150px;">К оплате</button>
        <a class="btn btn-secondary" asp-controller="Cars" asp-action="ListCars" style="width: 200px">Обратно к каталогу</a>
    </div>
</form>